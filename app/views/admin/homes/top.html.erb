<div class="container col-12">
  <div class="mt-4">
    <h4 class="offset-1 mb-4"><span style="background-color: gainsboro">注文履歴一覧</span></h4>
    </div>
  <div class="row my-5">
    <div class="col-md-10 mx-auto">
      <table class='table'>
        <thead>
          <tr>
            <th class="col-md-3">購入日時</th>
            <th class="col-md-3">購入者</th>
            <th class="col-md-3">注文個数</th>
            <th class="col-md-3">注文ステータス</th>
          </tr>
        </thead>
        <tbody class="border-bottom border-Secondary">
          <% @orders.each do |order| %>
            <tr>
              <td class="col-md-3">
                <%= link_to admin_order_path(order) do %>
                  <%= order.created_at.strftime("%Y/%m/%d %H:%M:%S") %></td>
                <% end %>
              <td class="col-md-3"><%= order.customer.full_name %></td>
              <td class="col-md-3">
              <% @total_amount = 0 %>
              <% order.order_details.each do |order_detail| %>
                <% order_detail.amount %>
                <% end %>
              <%= @total_amount %>
              </td>
              <td class="col-md-3"><%= order.status_i18n %></td>
            </tr>
          <% end %>
          <%= paginate @orders %>
        </tbody>
      </table>
    </div>
  </div>
</div>